.c-field_item {
    margin-top: 8px;
}
.c-field {
    margin-top: 32px;
    .c-field_label{
        font-size: 16px;
        font-weight: 700;
        display: flex;
        &:before {
            content: '';
            width: 21px;
            height: 19px;
            display: inline-block;
            margin-right: 8px;
            background-image: url("<%= asset_path('icon/icon-check.svg') %>")
        }
    }
    .c-field_input,
    .c-field_select {
        padding: 16px 12px;
        border-radius: 8px;
        border: solid 1px #BFBFBF;
        width: 100%;
        margin-top: 8px;
        cursor: pointer;
    }
}

.c-field_label + .c-field_item {
    margin-top: 18px;
}

.c-field_text {
    text-align: center;
    + .c-field_label {
        margin-top: 24px;
    }
}