.c-field {
    margin-top: 8px;
    .c-field_label{
        font-size: 16px;
        font-weight: 700;
        display: block;
        &:before {
            content: '';
            width: 21px;
            height: 19px;
            display: inline-block;
            background-image: url("<%= asset_path('icon/icon-check.svg') %>")
        }
    }
    .c-field_input,
    .c-field_select {
        padding-top: 16px;
        padding-bottom: 16px;
        border-radius: 8px;
        border: solid 1px #BFBFBF;
        width: 100%;
    }
}