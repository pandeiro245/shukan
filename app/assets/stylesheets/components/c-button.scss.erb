.c-button {
    padding-top: 12px;
    padding-bottom: 12px;
    padding-left: 16px;
    padding-right: 16px;
    text-align: center;
    border-radius: 8px;
    border: 0;
    color: #fff;
    display: block;
    width: 100%;
    font-weight: 700;
    font-size: 18px;
    cursor: pointer;
    .c-button_label {
        font-size: 18px;
        font-weight: 700;
    }
    &.c-button-primary {
        background: #FF8A01;
    }
    &.c-button-twitter {
        background: #1DA1F2;
        .c-button_label {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    }
}

.c-button_icon {
    display: inline-block;
    margin-right: 4px;
    &:before {
        content: '';
        width: 1em;
        display: block;
        height: 1em;
        background-repeat: no-repeat;
        background-position: center;
        background-size: contain;
        background-image: url("<%= asset_path('icon/icon-twitter.svg') %>")
    }
}