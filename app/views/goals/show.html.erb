<div class="l-inner">
    <div class="content">
        <div class="content_inner">
            <div class="content_header">
                <% from = Date.current.beginning_of_week; to =  from + 6.day %>
                <p class="term"><%= from.strftime('%Y.%m.%d') %>〜<%= to.strftime('%Y.%m.%d') %>のシュウカン</p>
                <div class="goalShowHeading">
                    <h2 class="c-headingLv2"><%= @goal.name %></h2>
                </div>
            </div>
            <div class="content_body">
                <div class="goalShowImage">
                  <%= image_tag 'goal/img-goal-show.png' %>
                </div>
                <div class="goalActions">
                    <%= form_with(model: @goal) do |form| %>
                        <%= form.hidden_field 'done', value: 'done' %>
                        <%= form.submit 'このシュウカンをこなした！', class:'c-button c-button-primary' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
